<Home>:
    name: "home"

    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "TimeTrack"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
                        right_action_items: [["clock", lambda x: app.Date()]]
                        elevation: 10

                    MDBottomNavigation:
                        MDBottomNavigationItem:
                            text: "Overview"
                            name: "Overview"
                            icon: "google"
                            ScrollView:
                                do_scroll_x: False
                                do_scroll_y: True
                                BoxLayout:
