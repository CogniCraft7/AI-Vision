ScreenManager:
    Main:
    LogIn:
    LogIn_Student:
    LogIn_Staff:
    LogIn_Organization:
    SignUp:
    SignUp_Student:
    SignUp_Staff:
    SignUp_Organization:
    Home:
    Task:
    Theme:

    

<Main>:
    name: "main"
    md_bg_color: 1, 1, 1, 1
    MDFloatLayout:
        Image:
            source: "tuple.gif"
            allow_stretch: True
            anim_delay: .1
            anim_reset: True
            pos_hint: {"center_y": .7}
        MDLabel:
            text: "Manage your Daily Tasks"
            font_style: "H5"
            pos_hint: {"center_y": .3}
            halign: "center"
            bold: True
        MDLabel:
            text: "Scheduling and planning made easy"
            font_style: "Body1"
            pos_hint: {"center_y": .24}
            halign: "center"
        Button:
            text: "Get Started"
            font_style: "Subtitle1"
            size_hint: .6, .065
            pos_hint: {"center_x": .5, "center_y": .15}
            background_color: 0, 0, 0, 0
            style: "outlined"
            color: rgba(52, 54, 231, 255)
            on_release: 
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52, 54, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100


<LogIn>:
    name: "login"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .93, "center_x": .1}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            text: "Log in"
            halign: "center"
            pos_hint: {"center_y": .83}
            bold: True
            font_style: "H4"
        MDLabel:
            text: "Who are you?"
            halign: "center"
            theme_text_color: "Secondary"
            pos_hint: {"center_y": .78}
        Button:
            background_normal: "stdent2.png"
            size_hint: .33, .2
            pos_hint: {"center_x": .30, "center_y": .62}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login_student"
        MDLabel:
            text: "STUDENT"
            font_size: "12sp"
            halign: "center"
            pos_hint: {"center_x": .30, "center_y": .50}
        Button: 
            background_normal: "teacher icon.png"
            size_hint: .33, .2
            pos_hint: {"center_x": .70, "center_y": .62}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login_staff"
        MDLabel:
            text: "STAFF"
            font_size: "12sp"
            halign: "center"
            pos_hint: {"center_x": .70, "center_y": .5}
        Button: 
            background_normal: "Organization GRP.png"
            size_hint: .33, .2
            pos_hint: {"center_x": .5, "center_y": .37}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login_organization"
        MDLabel:
            text: "ORGANIZATION"
            font_size: "12sp"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .27}
        MDLabel:
            text: "Don't have an account?"
            font_size: "12sp"
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .1}
            font_style: "Subtitle1"
        MDTextButton:
            text: "Sign up"
            pos_hint: {"center_x": .50, "center_y": .07}
            font_size: "12sp"
            color: rgba(59, 129, 252, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            font_style: "Subtitle1"



<LogIn_Student>:
    name: "login_student"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .93}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
        MDLabel:
            text: "Login"
            halign: "center"
            pos_hint: {"center_y": .93}
            bold: True
            font_style: "H5"
        Image:
            source: "stdent2.png"
            size_hint: .33, .2
            pos_hint: {"center_x": .5, "center_y": .76}
        MDFloatLayout:
            MDTextField:
                id: uname
                hint_text: "Username"
                pos_hint: {"center_x": 0.5, "center_y": 0.57}
                size_hint_x: None
                width: 300
            MDTextField:
                id: email
                hint_text: "E-mail"
                pos_hint: {"center_x": 0.5, "center_y": 0.47}
                size_hint_x: None
                width: 300
            MDTextField:
                id: password
                hint_text: "Password"
                pos_hint: {"center_x": 0.5, "center_y": 0.37}
                size_hint_x: None
                width: 300
                password: True
        MDTextButton:
            text: "Forgot Password?"
            color: rgba(52, 54, 221, 255)
            pos_hint: {"center_x": .50, "center_y": .31}
            font_size: "12sp"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
        Button:
            text: "LOG IN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .23}
            background_color: 0, 0, 0, 0
            on_release:
                app.verify_data(uname.text, email.text, password.text)
                root.manager.transition.direction = "right"
                root.manager.current = "home"
            canvas.before:
                Color:
                    rgb: rgba(52, 54, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDLabel:
            text: "or"
            halign: "center"
            pos_hint: {"center_y": .15}
        MDIconButton:
            icon: "google"
            pos_hint: {"center_x": .5, "center_y": .08}
            user_font_size: "30sp"
            on_release: app.login()
        MDIconButton:
            icon: "facebook"
            pos_hint: {"center_x": .19, "center_y": .08}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDIconButton:
            icon: "microsoft"
            pos_hint: {"center_x": .35, "center_y": .08}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDIconButton:
            icon: "linkedin"
            pos_hint: {"center_x": .65, "center_y": .08}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDIconButton:
            icon: "apple"
            pos_hint: {"center_x": .80, "center_y": .08}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"


